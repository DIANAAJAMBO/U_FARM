doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Registered Farmer Ones
  link(rel='stylesheet' href='../../css/bootstrap/css/bootstrap.min.css')
div
  .table-responsive
    table.table.table-striped.table-hover
      thead
        tr
          th Name
          //- th Last Name
          th username
          th NIN
          th Phone Number
          th Email
          th Date of Birth
          th Gender
          th Directions to Home 
          th Residential type
          th Ward
          th Period of Stay in Ward (Years)
          th FO Number
          th Date of Registeration
          th Activities done by FO
          th Action
      tbody
      if farmerOnes.length
        each farmerOne in farmerOnes 
          tr
            td #{farmerOne.firstname} #{farmerOne.lastname}
            td #{farmerOne.username}
            td #{farmerOne.NIN}
            td #{farmerOne.phonenumber}
            td #{farmerOne.email}
            td #{farmerOne.birthdate}
            td #{farmerOne.gender}
            td #{farmerOne.directionsToHome}
            td #{farmerOne.residenceType}
            td #{farmerOne.ward}
            td #{farmerOne.periodOfStayInWard}
            td #{farmerOne.foNumber}
            td #{farmerOne.dateOfRegistration}
            td #{farmerOne.activities}  
            td 
              a.btn.btn-dark.btn-block(href="/edit_farmerOne/"+farmerOne.id) Edit 
      else
        p there are no farmerOnes in the database.
script(src='../public/css/bootstrap/js/bootstrap.min.js')

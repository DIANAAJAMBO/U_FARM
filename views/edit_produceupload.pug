doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title Edit Produce Status
  link(rel="'stylesheet" href='/css/productupload.css')
  link(rel='stylesheet' href='/css/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet' href='../../css/editform.css')
.container.fluid(style="margin-top:40px")
  h2(style="text-align:center; text-decoration: underline;") Edit Produce Status
  form(action='/edit_produce?id='+item._id name="editproduce"  onsubmit='return Validate(event);' method='POST')
    .row(style='margin-top:30px; border:solid; width:700px; height:400px; margin:auto;' )
      .col-md-4(style='margin-top:30px;')
        label(for='productname') Produce Name:
        input.form-control(type='text' name='producename' value=item.producename disabled)
      
      .col-md-4(style='margin-top:30px;')
        label(for='wardname') Ward Name:
        select.form-control(name='wardname' value=item.wardname disabled)
          option(value='' disabled) Select
          option(value='Ward A' selected=item.ward==='Ward A') Ward A
          option(value='Ward B' selected=item.ward==='Ward B') Ward B
          option(value='Ward C' selected=item.ward==='Ward C') Ward C
          option(value='Ward D' selected=item.ward==='Ward D') Ward D
        
      .col-md-4(style='margin-top:30px;')
        label(for='uniqueid') Urban Farmer ID:
        input.form-control(type='text' name='uniqueid' value=item.uniqueid disabled)
      
      .col-md-4
        label(for='date') Date of upload:
        input.form-control(type='date' name='date' value=item.date disabled)
        
      .col-md-4
        label(for='unit-price') Unit Price in Ugx:
        input.form-control(type='number' name='unitprice' value=item.unitprice disabled)
      
      .col-md-4
        label(for='quantity') Quantity in kgs:
        input.form-control(type='number' name='quantity' value=item.quantity  disabled)
        
      .col-md-4
        label(for='product-type') Produce Type:
        select.form-control(name='producetype' value=item.producetype disabled)
          option(value='' disabled) Select
          option(value='organic'  selected=item.producetype==='organic') Organic
          option(value='non organic'  selected=item.producetype==='non organic') Non Organic
      
      .col-md-4
        label(for='status') Status:
        select.form-control(name='status' value=item.status )
          option(value='' disabled) Select
          option(value='Pending'  selected=item.status==='Pending') Pending
          option(value='Approved'  selected=item.status==='Approved') Approved
          option(value='Rejected'  selected=item.status==='Rejected') Rejected
    button.btn.btn-warning(type='submit' style='margin-top:20px; margin-left:50%') UPDATE
  
